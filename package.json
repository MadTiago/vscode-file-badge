{
  "name": "file-badge",
  "displayName": "File Badge",
  "description": "Tags files with a custom badge/text color on the right side of the filename",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-badge.tagFile",
        "title": "Toggle File Badge"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "file-badge.tagFile",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "file-badge.tagFile",
          "when": "false"
        }
      ]
    },
    "colors": [
      {
        "id": "fileBadge.treeItemTextForeground",
        "description": "Color for File Badge tagging",
        "defaults": {
          "dark": "#1478ca",
          "light": "#1417ca",
          "highContrast": "errorForeground"
        }
      }
    ],
    "configuration": {
      "title": "FileBadge",
      "properties": {
        "fileBadge.badge": {
          "type": "string",
          "default": "ðŸ“Œ",
          "description": "Specifies the badge to use for tagged files."
        },
        "fileBadge.tooltip": {
          "type": "string",
          "default": "Tagged",
          "description": "Specifies the tooltip for tagged files."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
